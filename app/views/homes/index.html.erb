<div class="posts-wrapper row">
  <% @homes.each do |home| %>
      <div class="col-md-6 box">
      <div class="post">
        <div class="post-head">
          <div class="name">
            Host
          </div>
        </div>
        <div class="image center-block">
          <%= link_to (image_tag home.image.url(:medium)), home_path(home) %>
        </div>
        <p class="caption">
          <h1><%= home.title %></h1><br>
          <%= home.location %>
        </p>
      </div>
    </div>
  <% end %>
</div>
