<div class="form-wrapper">
  <%= simple_form_for @home, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
    <%= f.input :image %>
    </div>
    <div class="form-group text-left">
      <%= f.input :title %>
    </div>
    <div class="form-group text-left">
      <%= f.input :location %>
    </div>
    <div class="form-group text-left">
      <%= f.input :about %>
    </div>
    <div class="form-group text-left">
      <%= f.input :price %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>
